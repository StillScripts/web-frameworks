---
import { Components, Framework, getLogo } from "../utils/components";
import FileReader from "./FileReader.astro";

export interface Props {
  framework: Framework;
  url: string;
}

const { framework, url } = Astro.props;

const frameworkL = framework.toLowerCase();

---

<div
  id={framework + "-Card"}
  class="my-4 h-full flex flex-col justify-between rounded-xl bg-gray-50 px-6 py-4 shadow-lg"
>
  <div>
    <div class="mb-2 flex items-center rounded-3xl">
      <div
        class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-gray-800/5 ring-1 ring-gray-900/5"
      >
        <img
          src={getLogo(framework)}
          alt={framework + "-Logo"}
          width={32}
          height={32}
          class="h-8 w-8 rounded-full"
          style="color:transparent"
        />
      </div>
      <h3 class="text-gray-900 ml-2 text-xl font-semibold">
        {framework}
      </h3>
    </div>
		<FileReader framework={framework} component={Components.BasicVariables} />
  </div>
  <div class="mt-2 flex flex-wrap items-center justify-between">
    <div class="mb-2">
      <a 
				class={`inline-flex items-center rounded-xl border border-transparent bg-opacity-90 bg-${frameworkL} px-4 py-2 text-sm font-medium text-white shadow-sm ring-${frameworkL} hover:bg-opacity-100 focus:outline-none focus:ring-2 focus:ring-offset-2`}
				href={`${frameworkL}/0`}
			>View Components</a>
    </div>
    <div class="mb-2">
      <a class={`px-4 py-2 text-${frameworkL} rounded-xl ring-${frameworkL} hover:text-gray-700 focus:ring-2 focus:ring-offset-2`} href={url}>Learn more &gt;</a>
    </div>
  </div>
</div>
