---
import { Components, Framework } from "../utils/components"
import FileReader from "./FileReader.astro"
import Logo from "./Logo.astro"

export interface Props {
  framework: Framework
  url: string
}

const { framework, url } = Astro.props

const frameworkL = framework.toLowerCase()
---

<div
  id={framework + "-Card"}
  class="my-4 h-full flex flex-col justify-between rounded-xl bg-gray-50 px-3 py-4 shadow-lg"
>
  <div>
    <div class="mb-2 flex items-center rounded-3xl">
      <Logo framework={framework} />
      <h2 class="text-gray-900 ml-2 text-xl font-bold md:text-2xl">
        {framework}
      </h2>
    </div>
    <div class="font-normal">
      <FileReader
        framework={framework}
        component={Components.BasicVariables}
        fixedHeight
      />
    </div>
  </div>
  <div class="mt-2 flex flex-wrap items-center justify-between">
    <div class="mb-2">
      <a
        class={`inline-flex items-center rounded-xl border border-transparent bg-opacity-90 bg-${frameworkL} px-4 py-2 text-white shadow-sm ring-${frameworkL} hover:bg-opacity-100 focus:outline-none focus:ring-2 focus:ring-offset-2`}
        href={`${frameworkL}/0`}>View Components</a
      >
    </div>
    <div class="mb-2">
      <a
        class={`px-4 py-2 text-${frameworkL} rounded-xl ring-${frameworkL} hover:text-gray-700 focus:ring-2 focus:ring-offset-2`}
        href={url}
        target="_blank"
        rel="noreferrer noopener">Learn more &gt;</a
      >
    </div>
  </div>
</div>
