---
import {
  componentsList,
  getComponentTitle,
} from "../../utils/components";
import Layout from "../../layouts/Layout.astro";
import SvelteComponents from "../../components/svelte/index.svelte"

export function getStaticPaths() {
  return componentsList.map((component) => ({ params: { id: component } }));
}

const { id } = Astro.params;
---

<Layout title="Svelte components" framework="Svelte" component={parseInt(id as string)}>
  <main class="mx-auto p-6 pt-20 max-w-screen-sm">
    <div class="text-center">
      <p class="text-base uppercase font-semibold text-indigo-600">Svelte</p>
      <h1
        class="mt-2 text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"
      >
        {getComponentTitle(parseInt(id as string))}
      </h1>
      <div
        class="my-5 p-8 inline-block border border-gray-200 shadow-lg rounded-lg"
      >
        <SvelteComponents currentComponent={parseInt(id as string)} client:idle />
      </div>
      <a
        href="#"
        class="block mt-3 text-base font-medium text-indigo-600 hover:text-indigo-500"
      >
        View source code
        <span aria-hidden="true"> &rarr;</span>
      </a>
    </div>
  </main>
</Layout>
