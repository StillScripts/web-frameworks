---
import { componentsList } from "../../utils/components";
import Layout from "../../layouts/Layout.astro";
import SvelteComponents from "../../components/svelte/index.svelte";

export function getStaticPaths() {
  return componentsList.map((component) => ({ params: { id: component } }));
}

const { id } = Astro.params;
---

<Layout
  title="Svelte components"
  framework="Svelte"
  component={parseInt(id as string)}
>
  <div class="mx-auto p-6 text-center max-w-screen-sm">
    <div
      class="my-5 p-8 inline-block border border-gray-200 shadow-lg rounded-lg"
    >
      <SvelteComponents currentComponent={parseInt(id as string)} client:idle />
    </div>
    <a
      href="#"
      class="block mt-3 text-base font-medium text-indigo-600 hover:text-indigo-500"
    >
      View source code {parseInt(id as string)+1}
      <span aria-hidden="true"> &rarr;</span>
    </a>
  </div>
</Layout>
