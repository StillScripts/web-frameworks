---
import { componentsList } from "../../utils/components";
import Layout from "../../layouts/Layout.astro";
import SolidComponents from "../../components/solid/SolidComponents";

export function getStaticPaths() {
  return componentsList.map((component) => ({ params: { id: component } }));
}

const { id } = Astro.params;
---

<Layout
  title="Solid components"
  framework="Solid"
  component={parseInt(id as string)}
>
  <SolidComponents currentComponent={parseInt(id as string)} client:idle />
</Layout>
